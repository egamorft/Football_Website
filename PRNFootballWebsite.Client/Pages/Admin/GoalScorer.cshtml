@page
@model PRNFootballWebsite.Client.Pages.Admin.GoalScorerModel
@{
}
<div class="container-xxl flex-grow-1 container-p-y" id="admin-addmatch">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Match /</span> Edit match scorer</h4>
    <div class="row mb-4">

        <!-- Bootstrap Validation -->
        <div class="col-md">
            <div class="card">
                <h5 class="card-header">Match-Scorer</h5>
                <div class="card-body">
                    <form class="needs-validation" novalidate asp-page-handler="Finished" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row g-6">
                            <div class="col">
                                <div class="mb-3 col-md-6 text-center">
                                    <h2>@Model.MatchStats.Team1Name</h2>
                                    <h2>@Model.MatchStats.Team1Goal</h2>
                                    <input type="hidden" asp-for="@Model.MatchStats.StatisticId">
                                </div>
                                @foreach (var scorer in Model.ListGoalScorer)
                                {
                                    @if (scorer.TeamId == Model.MatchStats.Team1ID)
                                    {
                                        <div class="mb-3 col-md-6 text-center">
                                            <input type="hidden" name="ListGoalScorer[@Model.ListGoalScorer.IndexOf(scorer)].StatisticId" value="@scorer.StatisticId">
                                            <select name="ListGoalScorer[@Model.ListGoalScorer.IndexOf(scorer)].PlayerId" class="form-select" id="bs-validation-country" required>
                                                @foreach (var player in Model.ListTeamsPlayer)
                                                {
                                                    <option value="@player.PlayerId" @(scorer.PlayerId == player.PlayerId ? "selected" : "")>@player.PlayerName</option>
                                                }
                                            </select>
                                            <input type="number" class="form-control" id="bs-validation-name" name="ListGoalScorer[@Model.ListGoalScorer.IndexOf(scorer)].ScoreMinutes"
                                           required value="@scorer.ScoreMinutes" />
                                            <div class="valid-feedback">Looks good!</div>
                                            <div class="invalid-feedback">Please enter your score minutes.</div>
                                        </div>
                                    }
                                }
                            </div>
                            <div class="col">
                                <div class="mb-3 col-md-6 text-center">
                                    <h2>@Model.MatchStats.Team2Name</h2>
                                    <h2>@Model.MatchStats.Team2Goal</h2>
                                </div>
                                @foreach (var scorer in Model.ListGoalScorer)
                                {
                                    @if (scorer.TeamId == Model.MatchStats.Team2ID)
                                    {
                                        <div class="mb-3 col-md-6 text-center">
                                            <input type="hidden" name="ListGoalScorer[@Model.ListGoalScorer.IndexOf(scorer)].StatisticId" value="@scorer.StatisticId">
                                            <select name="ListGoalScorer[@Model.ListGoalScorer.IndexOf(scorer)].PlayerId" class="form-select" id="bs-validation-country" required>
                                                @foreach (var player in Model.ListTeamsPlayer)
                                                {
                                                    <option value="@player.PlayerId" @(scorer.PlayerId == player.PlayerId ? "selected" : "")>@player.PlayerName</option>
                                                }
                                            </select>
                                            <input type="number" class="form-control" id="bs-validation-name" name="ListGoalScorer[@Model.ListGoalScorer.IndexOf(scorer)].ScoreMinutes"
                                           required value="@scorer.ScoreMinutes" />
                                            <div class="valid-feedback">Looks good!</div>
                                            <div class="invalid-feedback">Please enter your score minutes.</div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- /Bootstrap Validation -->
    </div>
</div>