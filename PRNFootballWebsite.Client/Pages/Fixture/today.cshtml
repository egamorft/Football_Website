@page
@model PRNFootballWebsite.Client.Pages.Fixture.todayModel
@{
    ViewData["Title"] = "Today fixture";
}
@if (HttpContext.Session.GetString("admin") != null)
{
    Response.Redirect("/Admin/Index");
}
<div class="section-title" style="background:url(/img/slide/1.jpg)">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h1>Fixtures</h1>
            </div>
            <div class="col-md-4">
                <div class="breadcrumbs">
                    <ul>
                        <li><a href="/index">Home</a></li>
                        <li>Inner Page</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="content-info">
    <div class="container paddings-mini">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="clear-title">Matches</h3>
            </div>
            <div class="col-lg-12">
                <table class="table-striped table-responsive table-hover">
                    @if (Model.ListTodayTournaments.Count > 0)
                    {
                        @foreach (var today_tour in Model.ListTodayTournaments)
                        {
                            <thead>
                                <tr>
                                    <th colspan="3" class="text-center">@today_tour.Name</th>
                                    <th>Date Time</th>
                                </tr>
                            </thead>
                            @foreach (var today_match in Model.ListTodayMatches)
                            {
                                @if(today_match.TournamentName.Equals(today_tour.Name))
                                {
                                    <tbody>
                                        <tr>
                                            <td>
                                                <img src="~/img/clubs-logos/@today_match.Team1Logo" alt="icon">
                                                <strong>@today_match.Team1Name</strong><br>
                                            </td>
                                            <td class="text-center">Vs</td>
                                            <td>
                                                <img src="~/img/clubs-logos/@today_match.Team2Logo" alt="icon1">
                                                <strong>@today_match.Team2Name</strong><br>
                                            </td>
                                            <td>
                                                @today_match.Datetime<br>
                                                <small class="meta-text">@today_match.Stadium</small>
                                            </td>
                                        </tr>
                                    </tbody>
                                }
                            }
                        }
                    }
                    else
                    {
                        <thead>
                            <tr>
                                <th colspan="4" class="text-center">No matches today</th>
                            </tr>
                        </thead>
                    }

                </table>
            </div>
        </div>
    </div>

</section>


